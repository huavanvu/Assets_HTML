                        a.navbar-brand(href='/')
                          img(src='../../assets/img/asset-logo.png', alt='')
                        .navbar__items
                          .navbar--item
                            a(href='/ket-qua/thong-tin') Th&ocirc;ng tin
                          .navbar--item
