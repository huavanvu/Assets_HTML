                      span.menu-tool--text T&agrave;i ch&iacute;nh c&aacute; nh&acirc;n
              .menu_mobile--item
                .menu-notify
                  a.d-flex(href='#')
                    img.img_menu(src='../../assets/img/Group 22.png', alt='')
              .menu_mobile--item
                a.btn-login(href='/dang-nhap')
                  img(src='../../assets/img/icon-avatar.png', alt='')
