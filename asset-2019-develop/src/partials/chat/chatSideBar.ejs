        <div class="chat-sidebar__list chat-list">
          <div class="chat-list__container">
            <div class="chat-list__content">
              <div class="chat-list__contact">
                <div class="chat-list--contact-items">
                  <!-- Contact items -->
                  <div class="contact-items contact-items__active">
                    <!-- Contact item -->
                    <div class="contact-item d-flex justify-content-center">
