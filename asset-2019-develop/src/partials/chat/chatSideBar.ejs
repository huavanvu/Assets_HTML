                      <div class="contact-item--status">
                        <img src="../../../assets/img/icon-chat-active.png" alt="">
                      </div>
                    </div>
                    <!-- Contact item -->
                    <div class="contact-item d-flex justify-content-center">
                      <div class="contact-item--avatar">
                        <img src="../../../assets/img/chat-avt-4.png" alt="">
                      </div>
                      <div class="contact-item--name">Amy Lee Johnson</div>
                      <div class="contact-item--status">
                        <img src="../../../assets/img/icon-chat-active.png" alt="">
                      </div>
                    </div>
                    <!-- Contact item -->
                    <div class="contact-item d-flex justify-content-center">
                      <div class="contact-item--avatar">
                        <img src="../../../assets/img/chat-avt-5.png" alt="">
                      </div>
                      <div class="contact-item--name">Picasa Poo</div>
                      <div class="contact-item--status">
                        <img src="../../../assets/img/icon-chat-active.png" alt="">
