              <div class="chat-popup__content">
                <div id="chat-popup__items" class="chat-popup__items">
                  <div class="chat-popup--item">
                    <div class="chat-popup--header d-flex">
                      <div class="chat-popup--status">
                        <img src="../../../assets/img/icon-chat-active.png" alt="">
                      </div>
                      <span class="ml-2 header--text">Test</span>
                      <div class="chat-popup--close">&#215;</div>
                    </div>
                    <div class="chat-popup--body"></div>
                    <div class="chat-popup--input">
                      <div class="input-group">
                        <input type="text" class="form-control" placeholder="Nhập tin nhắn" aria-label="Username"
                          aria-describedby="basic-addon1">
                          <div class="input-group-append">
                            <div class="send-icon">
                              <img src="../../assets/img/icon-send.png" alt="">
                            </div>
                          </div>
