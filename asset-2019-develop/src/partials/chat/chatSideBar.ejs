                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Chat message -->
        <div class="chat-sidebar__chat-message">
          <div class="chat-message__container">
            <div class="chat-message__content">
              <div class="chat-message d-flex justify-content-center align-items-center">
                <div class="chat-message--icon">
                  <img src="../../assets/img/chat-message.png" alt="">
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Chat Search -->
        <div class="chat-sidebar__search-input">
          <div class="search-input">
            <div class="search-input__container">
              <div class="search-input__content">
                <div class="input-group">
                  <div class="input-group-prepend">
                    <div class="search-icon">
                      <img src="../../assets/img/SVG/search.svg" alt="">
                    </div>
                  </div>
                  <input type="text" class="form-control" placeholder="Tìm kiếm bạn bè" aria-label="Username"
