                    </div>
                  </div>
                  <!-- Contact items -->
                  <div class="contact-items contact-items__inactive">
                    <!-- Contact item -->
                    <div class="contact-item d-flex justify-content-center">
                      <div class="contact-item--avatar">
                        <img src="../../../assets/img/chat-avt-6.png" alt="">
